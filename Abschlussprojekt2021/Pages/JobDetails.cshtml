@page
@model JobDetailsModel
@{
    ViewData["Title"] = "Job Datails";
}

<!-- Jobinfo - Karte -->
<div class="d-flex justify-content-center">
    <div class="col jobad">
        <p>
            <h5>Job Ad <span class="stellenId">(Stellen-Id @Model.Dto.Id)</span></h5>
        </p>
        <p class="text-uppercase">@Model.Dto.Name</p>

        <p>
            Position<br />
            @Model.Dto.Position
        </p>

        <p>
            Main Skills<br />
            @Model.Dto.MainSkills
        </p>

        <p>
            Region<br />
            @Model.Dto.Region
        </p>

        <p>
            Description<br />
            @Model.Dto.Description
        </p>

        <p>
            Start date<br />
            @Model.Dto.StartDate.ToString("ddd., dd.MM.yyyy")
        </p>

        <!-- Button - Redirect to Landingpage -->
        <p class="text-center">
            <a class="btn btn-light" asp-page="/Index">Home</a>
        </p>
    </div>
</div>

<!-- Kontaktformular -->
<div class="d-flex justify-content-center customForm">
    <div class="col jobad">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" autocomplete="off" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" autocomplete="off" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Message"></label>
                <input asp-for="Input.Message" autocomplete="off" class="form-control" />
            </div>
            <div class="containerDsgvo">
                <input type="checkbox" value="" />
                <span class="dsgvo">@Constants.TextDSGVOCheckbox</span>
            </div>

            <!-- Button - Redirect to Landingpage -->
            <p class="text-center">
                <button class="btn btn-success" type="submit">Bewerben</button>
            </p>
        </form>
    </div>
</div>
